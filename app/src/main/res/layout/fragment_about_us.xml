<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".utilities.AboutUsFragment">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/default_content_description"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="@string/app_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:padding="8dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:text="@string/app_description"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_version_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:tint="@color/colorGray"
                    app:srcCompat="@drawable/ic_version_white_24dp"
                    android:contentDescription="@string/default_content_description" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/version" />

                <TextView
                    android:id="@+id/version_value"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_person_white_24dp"
                android:drawableTint="@color/colorGray"
                android:text="@string/developer"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_email_24dp"
                android:drawableTint="@color/colorGray"
                android:text="@string/mail"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_github"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_github"
                android:drawableTint="@color/colorGray"
                android:text="@string/github_repo"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/layout_contri"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_people_black_24dp"
                android:drawableTint="@color/colorGray"
                android:text="@string/view_contributors"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_playstore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_playstore"
                android:drawableTint="@color/colorGray"
                android:padding="8dp"
                android:text="@string/playstore"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/layout_website"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_web"
                android:drawableTint="@color/colorGray"
                android:padding="8dp"
                android:text="@string/website"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/layout_slack"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_slack"
                android:drawableTint="@color/colorGray"
                android:padding="8dp"
                android:text="@string/join_slack"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_privacy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableTint="@color/colorGray"
                android:padding="8dp"
                android:text="@string/privacy_policy"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/layout_license"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_license"
                android:drawableTint="@color/colorGray"
                android:padding="8dp"
                android:text="@string/license"
                tools:targetApi="m" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>